{
	"name": "@abinnovision/eslint-config-react",
	"packageManager": "yarn@3.4.1",
	"version": "1.2.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"license": "Apache-2.0",
	"author": {
		"name": "AB INNOVISION UG (limited liability)",
		"email": "info@abinnovision.com",
		"url": "https://abinnovision.com/"
	},
	"repository": {
		"url": "https://github.com/abinnovision/js-commons"
	},
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "tsc",
		"lint:check": "eslint 'src/**/*.{ts,js}'",
		"lint:fix": "eslint --fix 'src/**/*.{ts,js}'",
		"format:check": "prettier --check 'src/**/*.{ts,js}' '**/*.{md,json,json5,yaml,yml}'",
		"format:fix": "prettier --write 'src/**/*.{ts,js}' '**/*.{md,json,json5,yaml,yml}'"
	},
	"dependencies": {
		"eslint-config-alloy": "^5.1.2"
	},
	"devDependencies": {
		"@abinnovision/eslint-config-base": "workspace:^",
		"@abinnovision/eslint-config-typescript": "workspace:^",
		"@abinnovision/prettier-config": "workspace:^",
		"@types/eslint": "^8.21.1",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"eslint": "^8.52.0",
		"typescript": "^5.2.2"
	},
	"peerDependencies": {
		"eslint": "^8.0.0",
		"eslint-plugin-react": "^7.0.0"
	},
	"eslintConfig": {
		"extends": [
			"@abinnovision/eslint-config-base",
			"@abinnovision/eslint-config-typescript"
		],
		"parserOptions": {
			"project": "./tsconfig.json"
		}
	},
	"prettier": "@abinnovision/prettier-config",
	"lint-staged": {
		"src/**/*.{ts,js}": [
			"prettier --write",
			"eslint --fix"
		],
		"**/*.{md,json,json5,yaml,yml}": [
			"prettier --write"
		]
	}
}
