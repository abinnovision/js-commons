{
	"name": "@internal/js-commons",
	"packageManager": "yarn@4.0.0",
	"scripts": {
		"build": "turbo build",
		"clean": "rimraf packages/*/dist",
		"fix": "concurrently 'yarn:prettier:fix' 'turbo fix'",
		"check": "concurrently 'yarn:prettier:check' 'turbo check'",
		"prettier:check": "prettier --check '{*,.github/**/*}.{md,json,json5,yaml,yml}'",
		"prettier:fix": "prettier --write '{*,.github/**/*}.{md,json,json5,yaml,yml}'",
		"postinstall": "husky install"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@abinnovision/commitlint-config": "workspace:^",
		"@abinnovision/prettier-config": "workspace:^",
		"@commitlint/cli": "^18.2.0",
		"concurrently": "^8.2.0",
		"husky": "^8.0.0",
		"lint-staged": "^15.0.2",
		"prettier": "^3.0.0",
		"rimraf": "^5.0.1",
		"turbo": "^1.10.16"
	},
	"commitlint": {
		"extends": [
			"@abinnovision/commitlint-config"
		]
	},
	"prettier": "@abinnovision/prettier-config",
	"lint-staged": {
		"**/*.{md,json,json5,yaml,yml}": [
			"prettier"
		]
	}
}
